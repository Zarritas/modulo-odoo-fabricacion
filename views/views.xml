<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="jll_cornercookie.pedido_list">
      <field name="name">jll_cornercookie pedido list</field>
      <field name="model">jll_cornercookie.pedido</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fechapedido"/>
        </tree>
      </field>
    </record>
    <record id="model_name_view_form" model="ir.ui.view">
      <field name="name">model_name.view.form</field>
      <field name="model">jll_cornercookie.pedido</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name" />
              <field name="fechapedido" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="jll_cornercookie.proveedor_list">
      <field name="name">jll_cornercookie pedido list</field>
      <field name="model">jll_cornercookie.proveedor</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="nombre"/>
        </tree>
      </field>
    </record>
    <record id="model_name_view_form" model="ir.ui.view">
      <field name="name">model_name.view.form</field>
      <field name="model">jll_cornercookie.proveedor</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="nombre"/>
              <field name="dni"/>
              <field name="telefono"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="jll_cornercookie.pedido_action_window">
      <field name="name">jll_cornercookie pedido</field>
      <field name="res_model">jll_cornercookie.pedido</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="jll_cornercookie.proveedor_action_window">
      <field name="name">jll_cornercookie proveedor</field>
      <field name="res_model">jll_cornercookie.proveedor</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
