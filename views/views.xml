        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="jll_cornercookie" id="jll_cornercookie.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="jll_cornercookie.menu_1" parent="jll_cornercookie.menu_root"/>
    <!-- <menuitem name="Menu 2" id="jll_cornercookie.menu_2" parent="jll_cornercookie.menu_root"/> -->

    <!-- actions -->
    <menuitem name="Pedido" id="jll_cornercookie.menu_1_list" parent="jll_cornercookie.menu_1"
              action="jll_cornercookie.pedido_action_window"/>
    <menuitem name="Proveedor" id="jll_cornercookie.menu_2_list" parent="jll_cornercookie.menu_1"
              action="jll_cornercookie.proveedor_action_window"/>
    <!-- <menuitem name="Server to list" id="jll_cornercookie" parent="jll_cornercookie.menu_2"
              action="jll_cornercookie.action_server"/> -->
  </data>
</odoo>